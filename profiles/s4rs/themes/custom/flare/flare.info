name =  Flare
description = Flare theme based on the Aurora base theme.
core = 7.x
base theme = aurora

; ========================================
; Regions
; ========================================

regions[header]       = 'Header'
regions[main_prefix_full] = 'Main Region Prefix Full Width'
regions[main_prefix]  = 'Main Region Prefix'
regions[content]      = 'Main Region'
regions[main_suffix]  = 'Main Region Suffix'
regions[footer]       = 'Footer'

; ========================================
; Stylesheets
; ========================================

stylesheets[all][] = 'css/style.css'
stylesheets[all][] = 'build/css/style.min.css'
stylesheets[print][] = 'css/print.css'

; If installed through Bower
; stylesheets[all][] = 'vendor/formalize/assets/css/formalize.css'

; ========================================
; Scripts
; ========================================

; If installed through Bower
; scripts[] = 'vendor/formalize/assets/js/jquery.formalize.min.js'
scripts[] = 'js/sticky-bottom.js'
scripts[] = 'js/tables-mobile.js'
scripts[] = 'js/activity-center.js'
scripts[] = 'js/full-width-iframe.js'

; ========================================
; Modernizr
; ========================================

modernizr[tests][] = css_boxsizing

; ========================================
; Settings
; ========================================

settings[toggle_node_user_picture] = '1'
settings[toggle_comment_user_picture] = '1'
settings[toggle_comment_user_verification] = '1'
settings[default_logo] = '1'
settings[logo_path] = ''
settings[logo_upload] = ''
settings[default_favicon] = '1'
settings[favicon_path] = ''
settings[favicon_upload] = ''
settings[hide_recomended_modules] = '1'
settings[aurora_enable_chrome_frame] = '1'
settings[aurora_min_ie_support] = '8'
settings[aurora_html_tags] = '1'
settings[aurora_typekit_id] = '0'
settings[aurora_livereload] = '0'
