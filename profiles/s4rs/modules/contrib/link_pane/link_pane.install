      'query' => array(
        'type' => 'text',
        'size' => 'big',
        'description' => 'Query string to append to the URL.',
      ),
      'fragment' => array(
        'type' => 'text',
        'size' => 'big',
        'description' => 'A fragment identifier (named anchor) to append to the URL.',
      ),
      // From http://api.drupal.org/api/drupal/includes--common.inc/function/url/7
      'absolute' => array(
        'type' => 'int',
        'size' => 'tiny',
        'default' => 0,
