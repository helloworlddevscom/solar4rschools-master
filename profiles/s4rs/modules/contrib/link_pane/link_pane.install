      'class' => array(
        'type' => 'text',
        'size' => 'big',
        'description' => 'Class attribute of link tag, classes separated by space.',
      ),
      'title' => array(
        'type' => 'text',
        'size' => 'big',
        'description' => 'Title of link tag.',
      ),
      'target' => array(
        'type' => 'text',
        'size' => 'big',
        'description' => 'Target of link tag. Depreciated in HTML5.',
